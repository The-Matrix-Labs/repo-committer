STORE1_MONGODB_NAME=store1
STORE1_GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id_for_store1

# Store 2 Configuration
STORE2_TELEGRAM_GROUP_ID=-1009876543210
STORE2_MONGODB_NAME=store2
